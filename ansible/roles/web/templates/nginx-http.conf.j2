server {
    listen 80;
    listen [::]:80;
    server_name {{ nginx_server_name | default('localhost') }};

    root /var/www/html;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }

    # Logs
    access_log /var/log/nginx/{{ environment_name | default('staging') }}_access.log;
    error_log /var/log/nginx/{{ environment_name | default('staging') }}_error.log;
}
